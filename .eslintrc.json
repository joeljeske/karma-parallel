{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jasmine": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended"
  ],
  "globals": {
    "FakeNews": true,
    "GlobalConditions": true
  },
  "plugins": [
    "security"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "security/detect-object-injection": 0
  }
}
